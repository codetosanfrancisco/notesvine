<div class="row">
	<div class="col-md-8">
		<div class="page-header top-bottom-padding">
			<h1>
				MyNotes <small> For me, for everyone</small>
			</h1>
		</div>
	</div>
</div>
<div class="row">
    <div class="col-md-12">
        
    </div>
</div>
<% @categories.each do |category|%>
  <div class="font-family-monsterrat font-size-lg"><%= link_to(category.name.titlecase + "'s notes",category_path(category))%></div>
    <div class="owl-carousel owl-theme">
      <% category_notes(category).each do |note|%>
        <div class="item">
          <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= note.title %></h5>
                  <p class="card-text"><%= truncate(note.description.html_safe,length:50)%></p>
                </div>
                <div class="card-footer">
                  <% time = "created " + time_ago_in_words(note.created_at) + " ago" %>
                  <% time = "last updated " + time_ago_in_words(note.updated_at) + " ago" if note.updated_at > note.created_at%>
                  <small class="text-muted"><%= time %></small>
                </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<script>
  $('.owl-carousel').owlCarousel({
    margin:20,
    responsive:{
        0:{
            items:1
        },
        600:{
            items:2
        },
        1000:{
            items:3
        }
    }
})
</script>


    
	