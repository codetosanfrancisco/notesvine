<div class="row">
	<div class="col-md-12">
		<div class="row padding-top-sm">
    		<div class="col-md-6 offset-md-6">
    		    <%= link_to "Edit this note",edit_note_path(@note),class:"btn btn-warning"%>
    		    <%= link_to "Move this note","",class:"btn btn-secondary"%>
    		    <%= link_to "Delete this note",note_path(@note),method: :delete,data:{ confirm:"Are you sure you want to delete this note? "},class:"btn btn-danger"%>
    		</div>
    	</div>
	    <div id="title">
	        <div class="row">
	            <div class="col-md-12">
    	            <%= @note.title%>
    	        </div>
	        </div>
	    </div>
		<div id="description">
		    <h5>Description:</h5>
			<%= @note.description.html_safe %>
		</div>
		<div id="code">
		    <h5><%= @note.importance.titlecase %> code:</h5>
		<div class="font-size-sm font-family-menlo">
			<%= @note.code.html_safe %>
		</div>
		</div>
	</div>
</div>