<div class="row">
	<div class="col-md-12">
	    <div id="title">
	        <div class="row">
	            <div class="col-md-10">
    	            <%= @note.title%>
    	        </div>
        		<div class="col-md-2">
        		    <%= link_to "Edit this note",edit_note_path(@note),class:"btn btn-warning"%>
        		</div>	
	        </div>
	    </div>
		<div id="description">
		    <h5>Description:</h5>
			<%= @note.description.html_safe %>
		</div>
		<div id="code">
		    <h5><%= @note.importance.titlecase %> code:</h5>
		<div class="font-size-sm font-family-menlo">
			<%= @note.code.html_safe %>
		</div>
		</div>
	</div>
</div>