<div class="row">
    <div class="col-md-3">
        <div id="sidebar" align="center">
            <div class="border-bottom padding-bottom-md sidebar-block">
                <div align="center">
                    <div class="border-box padding-top-sm">
                        <%= image_tag gravatar_url(current_user.email, 80),class:"rounded-corner"%>
                    </div>
                    <div class="border-box padding-top-sm">
                        <h6><%= current_user.full_name %></h6>
                    </div>
                </div>
            </div>
            <div class="sidebar-block border-box padding-top-sm padding-bottom-sm">
                <%= link_to "New category",new_category_path,class:"btn btn-success"%>
            </div>
            <div class="sidebar-block border-bottom padding-top-md padding-bottom-md">
                <% @categories.each do |category|%>
                   <%= sync partial:"category",resource: category%>   
                <% end %>
            </div>
        </div>
    </div>
    
