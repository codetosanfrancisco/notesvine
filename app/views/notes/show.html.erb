<div class="row">
	<div class="col-md-12">
		<div class="row padding-top-sm">
    		<div class="col-md-6 offset-md-<%= @moves.any? ? '6':'8' %>">
    		    <%= link_to "Edit this note",edit_note_path(@note),class:"btn btn-secondary"%>
    		    <% if @moves.any? %>
	    		    <select class="selectpicker" data-width="150px" multiple title="Move this note" onChange="handleSelect(this)">
	    		    	<% @moves.each do |c| %>
					  		<option value="<%= move_note_path(@note,category: c.id) %>"><%= c.name %></option>
					  	<% end %>
					</select>
				<% end %>
    		    <%= link_to "Delete this note",note_path(@note),method: :delete,data:{ confirm:"Are you sure you want to delete this note? "},class:"btn btn-danger"%>
    		</div>
    	</div>
	    <div id="title">
	        <div class="row">
	            <div class="col-md-12">
    	            <%= @note.title%><span class="badge badge-warning" style="font-size:0.5em;margin-left:10px"><%= @note.category.name %></span>
    	        </div>
	        </div>
	    </div>
		<div id="description">
		    <h5>Description:</h5>
			<%= @note.description.html_safe %>
		</div>
		<div id="code">
		    <h5><%= @note.importance.titlecase %> code:</h5>
		<div class="font-size-sm font-family-menlo">
			<%= @note.code.html_safe %>
		</div>
		</div>
	</div>
</div>

<script>
	$('.selectpicker').selectpicker({
	  style: 'btn-info',
	  size:2
	});
	const handleSelect = (elm) => {
		window.location = elm.value
	}
</script>